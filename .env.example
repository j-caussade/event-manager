################################################################################
# Environment Configuration Example
# Copy this file to `.env` and fill in the values for your environment.
# This file is safe to commit to version control.
################################################################################

# Application Environment
# Values: 'dev' (development) or 'prod' (production)
NODE_ENV=

################################################################################
# Database Configuration
################################################################################

# MySQL Root Password (for local development only, avoid using in production)
MYSQL_ROOT_PASSWORD=

# MySQL Admin User (for phpMyAdmin access)
MYSQL_USER=
MYSQL_USER_PASSWORD=

# Application Database and User
DB_NAME=eventura
DB_USER=
DB_PASSWORD=
DB_HOST=  # Use 'db' if using Docker, otherwise 'localhost'

################################################################################
# Port Configuration
################################################################################

# phpMyAdmin Port (default: 8080)
PHPMYADMIN_PORT=

# Application Port (default: 3000)
PORT=

################################################################################
# Security Configuration
################################################################################

# JWT Secret Key (used for token generation and validation)
JWT_SECRET=

################################################################################
# Host Configuration
################################################################################

# Host (use 'localhost' for local development, '0.0.0.0' for Docker)
HOST=

################################################################################
# Test Users Credentials (for local development only)
# WARNING: These passwords are for local testing and should NEVER be used in production.
################################################################################

# Admin User
TEST_USER_ADMIN_EMAIL=john.doe@example.com
TEST_USER_ADMIN_PASSWORD=password123  # Plaintext password (for local testing only)
TEST_USER_ADMIN_HASHED_PASSWORD=$2b$10$31Zh42Fr4IaopTKzV4dOpOh9v3RpUB0OMlORtqhNlahFQm5BkPc0e  # BCrypt hash (10 rounds)

# Regular User
TEST_USER_REGULAR_EMAIL=jane.smith@example.com
TEST_USER_REGULAR_PASSWORD=password456  # Plaintext password (for local testing only)
TEST_USER_REGULAR_HASHED_PASSWORD=$2b$10$9/rns8ziiqdLxj/MS3uSnuBSGGQ4nLzESUFtq38lPN64C2EHP2ZdW  # BCrypt hash (10 rounds)
